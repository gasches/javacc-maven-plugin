  <version>1.0</version>
  <name>Maven Javacc Plugin</name>
  <url>http://maven.apache.org</url>
  
     <ciManagement>
        <system>Maven Javacc Plugin</system>
        <notifiers>
            <notifier>
                <type>mail</type>
                <configuration>
                    <address>jruiz@exist.com</address>
                </configuration>
            </notifier>
      </notifiers>
    </ciManagement>
    
  <dependencies>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-plugin-api</artifactId>
